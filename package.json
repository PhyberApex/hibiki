{
  "name": "hibiki",
  "version": "0.1.0",
  "description": "Hibiki (響) – Discord audio companion bot with a Vue-based control surface.",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/bot",
    "apps/web"
  ],
  "scripts": {
    "lint": "pnpm run -r lint",
    "dev": "concurrently \"pnpm --filter @hibiki/bot start:dev\" \"pnpm --filter web dev\"",
    "build": "pnpm --filter web build && pnpm copy:web && pnpm --filter @hibiki/bot build",
    "copy:web": "node scripts/copy-web-dist.cjs",
    "start": "pnpm --filter @hibiki/bot start:prod",
    "test:coverage": "pnpm run -r test:coverage"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "joi": "^18.0.2",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.28"
  },
  "packageManager": "pnpm@10.29.3"
}